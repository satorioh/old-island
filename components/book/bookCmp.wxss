/* components/book/bookCmp.wxss */
.container {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 240rpx;
  height: 360rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
  margin-top: 30rpx;
}

.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.desc {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 5rpx 10rpx 8rpx 15rpx;
  background-color: #fff;
  font-size: 24rpx;
}

.title {
  margin-top: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.author {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.foot {
  text-align: right;
}

.fav-num {
  font-size: 20rpx;
  color:#999;
}