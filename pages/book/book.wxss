/* pages/book/book.wxss */
.container {
  display: flex;
  flex-direction: column;
  background-color: #F9F9F9;
}

.header {
  position: fixed;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  width:100%;
  height: 100rpx;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  box-shadow:0 0 3px 0 #e3e3e3;
}

.box {
  display:flex;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 34px;
  width:700rpx;
  color:#999;
}

.box image {
  margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top:100rpx;
}

.quality {
  width: 107rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 90rpx;
  justify-content: space-between;
}

.list v-book {
  margin-bottom: 10rpx;
}